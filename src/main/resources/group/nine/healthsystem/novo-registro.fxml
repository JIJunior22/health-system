<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Novo Registro" textAlignment="CENTER" textFill="#28b984">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="70.0">
         <children>
            <VBox alignment="CENTER">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <ImageView fitHeight="71.0" fitWidth="73.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/icons/pressao-arterial.png" />
                     </image>
                  </ImageView>
                  <Label text="Pressão Arterial" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="13.0" />
                     </padding>
                  </Label>
                  <Label text="Sistólica mmHg (maior)" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField alignment="CENTER" promptText="ex: 123" />
                  <Label text="Diastólica mmHg (menor)" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField alignment="CENTER" promptText="ex: 86" />
                  <Label text="Frequência Cardíaca (BPM)" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField alignment="CENTER" promptText="ex: 80" />
               </children>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <ImageView fitHeight="77.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/icons/medidor-de-glicose.png" />
                     </image>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </ImageView>
                  <Label text="Glicemia" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="13.0" />
                     </padding>
                  </Label>
                  <Label text="Glicemia" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField alignment="CENTER" promptText="ex: 123" />
                  <Label text="Está em Jejum?" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="12.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="Não">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <toggleGroup>
                              <ToggleGroup fx:id="jejum" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Sim" toggleGroup="$jejum">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </RadioButton>
                     </children>
                  </HBox>
                  <Label text="Observações:" textAlignment="CENTER" textFill="#797979">
                     <font>
                        <Font name="Futura Md BT Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextArea prefHeight="61.0" prefWidth="200.0" promptText="ex: Estava com tontura" />
               </children>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</VBox>
